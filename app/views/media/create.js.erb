$(function() {
    var mi_id = $('#mi_id')

    $("#media-form").dialog({
        autoOpen: false,
        height: 300,
        width: 350,
        modal: true,
        buttons: {
            "Add Item to Trip": function() {
                mi_id.val();
                $(this).dialog("close");
            },
            Cancel: function() {
                $(this).dialog("close");
            }
        }
    });

    $("#add-item").button().click(function(){
        $("#media-form").dialog("open");
    });

});

