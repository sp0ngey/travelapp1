<p>
  <a id="LoginLink"><%= image_tag('generic_login_32x32.png') %></a>
  <a id="LoginLinkFB"><%= image_tag('facebook_32x32.png') %></a>
  <a id="LoginLinkTW"><%= image_tag('twitter_32x32.png') %></a>
</p>

<div id="jbhnm-signing-identity" title="Sign In" class="hidden">
  <div id="jbhnm-signing-identity-form">
     <form>
       <fieldset>
         <label for="email">Email</label>
         <input type="text" name="auth_key" id="auth_key" value="" class="text ui-widget-content ui-corner-all" />
         <label for="password">Password</label>
         <input type="password" name="password" id="password" value="" class="text ui-widget-content ui-corner-all" />
       </fieldset>
     </form>
     <hr/>
     Not a registered user? <a id="RegisterLink">Sign up here...</a>
  </div>

  <div id="jbhnm-signing-identity-wait" class="hidden">
    Please wait while we sign you in...
  </div>
</div>

<div id="jbhnm-signing-identity-register" title="Register..." class="hidden">
  <div id="jbhnm-signing-identity-form">
      <form method='post'>
        <label for='name'>Name:</label>
        <input type='text' id='name' name='name'/>
        <label for='email2'>Email:</label>
        <input type='text' id='email2' name='email2'/>
        <label for='password2'>Password:</label>
        <input type='password' id='password2' name='password2'/>
        <label for='password_confirmation'>Confirm Password:</label>
        <input type='password' id='password_confirmation' name='password_confirmation'/>
      </form>
    </div>
</div>

<hr />